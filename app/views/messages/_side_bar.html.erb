<div class = "side-header" >    <%# サイドバー  上部部分 %>
  <div class = "side-user" >    <%# サイドバー  ログインユーザー部 %>
    <%= link_to edit_user_path( current_user ) do %>      <%# users#edit(名前編集画面)と連携 %>
      <%= current_user.name %>                            <%# ログインユーザーの名前表示 %>
    <% end %>
  </div>
  <div class = "side-create" >  <%# サイドバー  チャットルーム作成部 %>
    <%= link_to "チャットを作成する", new_room_path %>
  </div>
</div>
<div class = "side-rooms" >     <%# サイドバー  ルーム部 %>
  <% current_user.rooms.each do | room | %>
  <div class = "room" >
    <div class = "room-name" >
      <%= link_to room.name, room_messages_path( room ) %>
    </div>
  </div>
  <% end %>
</div>